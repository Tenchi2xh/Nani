@font-face {
    font-family: "Seal Script";
    src: url({{ font }});
}

body {
    margin: 0;
}

.seal {
    background-image: url({{ bg }});
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    -webkit-mask-image: url({{ texture }});
    -webkit-mask-size: 180px;
}

.seal span {
    background-color: hsl({{ hue }}, 50%, 50%);
    line-height: 425px;
    font-family: "Seal Script";
    font-size: 450px;
    padding: 28px 4px 24px 17px;
    border-radius: 25px;
    color: white;
    mix-blend-mode: multiply;
}
